extends layout
block body
  nav(class="navbar navbar-inverse navbar-fixed-top")
    div(class="container")
      div(class="navbar-header")
        button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
          span(class="sr-only") Toggle navigation
          span(class="icon-bar") 
          span(class="icon-bar") 
          span(class="icon-bar") 
        a(class="navbar-brand" href="#") PiPong
      div(id="navbar" class="collapse navbar-collapse")
        ul(class="nav navbar-nav")
          li(class="tab active" id="validateTab")
            a(href="#/validateView" data-toggle="tab") Validate
          li(class="tab" id="generalTab")
            a(href="#/generalView" data-toggle="tab") General
          li(class="tab" id="playerTab")
            a(href="#/playerView" data-toggle="tab") Player
  div(ng-view)
  script(src='bower_components/jquery/dist/jquery.min.js')
  script(src='bower_components/angular/angular.min.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script.
    $(".tab").click(function(){
      $(".tab").removeClass('active');
      $(this).addClass('active');
    })
    $(".navbar-brand").click(function(){
      $(".tab").removeClass('active');
      $("#validateTab").addClass("active");
    })

